# Dockerfile for testing CozyLife Local integration
FROM python:3.11-slim

# Set working directory
WORKDIR /workspace

# Install system dependencies including build tools
RUN apt-get update && apt-get install -y \
    git \
    gcc \
    g++ \
    make \
    tzdata \
    && rm -rf /var/lib/apt/lists/*

# Set timezone environment variable
ENV TZ=America/Los_Angeles

# Install Python dependencies
COPY requirements_test.txt .
RUN pip install --no-cache-dir -r requirements_test.txt

# Copy the integration code
COPY custom_components/ /workspace/custom_components/

# Copy tests
COPY tests/ /workspace/tests/

# Set Python path
ENV PYTHONPATH=/workspace

# Default command runs pytest
CMD ["pytest", "-v", "--cov=custom_components/hass_cozylife_local_pull", "--cov-report=term-missing", "--cov-report=html", "tests/"]

